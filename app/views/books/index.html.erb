<h1>Books</h1>

<table>
  <tr>
    <th>title</th>
    <th>body</th>
  </tr>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td> 
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>

</table>