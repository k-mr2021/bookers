<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

  <div class="edit-title">
    <p>Title</p>
    <%= f.text_field :title %>
  </div> 
  
  <div class="edit-body">
    <p>Body</p>
    <%= f.text_area :body %>
  </div> 
  
  <div class="edit-submit">
    <%= f.submit 'Update Book' %>
  </div>
  
  <%= link_to "Show", book_path(@book.id) %>   | 

 <a href="/books">Back</a>

<% end %>
