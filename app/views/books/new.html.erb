
<h2>New book</h2>
<%= form_with model: @book, url: '/books',method: :post do |f| %>
<div class="text_field">
  <p>title</p>
  <%= f.text_field :title %>
</div>

<div class="text_field">  
  <p>body</p>
  <%= f.text_area :body %>
</div>  

<div class="text_submit">  
  <%= f.submit 'Create Book' %>
</div>
<% end %>
